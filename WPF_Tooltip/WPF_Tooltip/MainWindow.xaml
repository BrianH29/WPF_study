<Window x:Class="WPF_Tooltip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Tooltip"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button ToolTip="I'm a tool tip! I'm useful" Content="Hover more info" Width="150" Height="50"/>
        <TextBlock ToolTip="Please enter your age below">age</TextBlock>
    </Grid>
</Window>
